{
  "ReverseProxy": {
    "Routes": {
      "auth_route": { "ClusterId": "auth_cluster", "Match": { "Path": "/api/Auth/{**catch-all}" } },
      "product_route": { "ClusterId": "product_cluster", "Match": { "Path": "/api/Products/{**catch-all}" } },
      "logs_route": { "ClusterId": "logs_cluster", "Match": { "Path": "/api/Logs/{**catch-all}" } }
    },
    "Clusters": {
      "auth_cluster": { "Destinations": { "auth_api": { "Address": "http://authservice:8080" } } },
      "product_cluster": { "Destinations": { "product_api": { "Address": "http://productservice:8080" } } },
      "logs_cluster": { "Destinations": { "logs_api": { "Address": "http://logservice:8080" } } }
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
